datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Wallet {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  address   String   @unique @db.Char(10)
  contents  Json
  title     String?
  note      String?
  emails    Email[]

  @@index([address])
  @@index([id])
}

model Email {
  id           Int      @id @default(autoincrement())
  emailAddress String
  sendAt       DateTime
  Wallet       Wallet?  @relation(fields: [walletId], references: [id])
  walletId     Int?

  @@index([walletId])
}
